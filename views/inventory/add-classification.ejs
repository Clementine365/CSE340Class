<!-- Page Title -->
<title>Add New Classification</title>

<div class="container">
  <div class="classification-container">
    <h1>Add New Classification</h1>

    <!-- Flash or General Message -->
    <% if (messages && messages.info && messages.info.length > 0) { %>
  <div class="flash-message"><%= messages.info[0] %></div>
<% } %>


    <!-- Validation Errors -->
    <% if (errors && errors.array && errors.array().length > 0) { %>
      <ul class="error-messages">
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>

    <!-- Add Classification Form -->
    <form action="/inv/add-classification" method="post" id="addClassificationForm" novalidate>
      <label for="classification_name">Classification Name:</label>
      <input 
        type="text" 
        id="classification_name" 
        name="classification_name" 
        pattern="^[A-Za-z0-9]+$"
        title="Only letters and numbers allowed. No spaces or special characters."
        required 
        value="<%= classification_name || '' %>"
      >
      
      <button type="submit">Add Classification</button>
    </form>
  </div>
</div>
