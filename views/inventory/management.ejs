<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Inventory Management</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <div class="management-container">
    <h1>Inventory Management</h1>

    <!-- Flash messages -->
    <% if (messages && Object.keys(messages).length > 0) { %>
      <% Object.keys(messages).forEach(type => { %>
        <% messages[type].forEach(msg => { %>
          <div class="flash-message <%= type %>"><%= msg %></div>
        <% }) %>
      <% }) %>
    <% } %>

    <!-- Links for adding -->
    <ul class="management-links">
      <li><a href="/inv/add-classification">Add Classification</a></li>
      <li><a href="/inv/add-inventory">Add Inventory</a></li>
    </ul>

    <!-- Classification Filter Dropdown -->
    <form method="GET" action="/inv/management" style="margin-top: 1.5rem;">
      <label for="classificationSelect"><strong>Filter by Classification:</strong></label>
      <select id="classificationSelect" name="classification_id" onchange="this.form.submit()">
        <option value="">-- Select a Classification --</option>
        <% classifications.forEach(c => { %>
          <option value="<%= c.classification_id %>" 
            <%= classification_id == c.classification_id ? "selected" : "" %>>
            <%= c.classification_name %>
          </option>
        <% }) %>
      </select>
      <noscript><button type="submit" style="margin-top: 10px;">Filter</button></noscript>
    </form>

    <!-- Inventory Table -->
    <% if (inventory && inventory.length > 0) { %>
      <table style="width: 100%; border-collapse: collapse; margin-top: 2rem;">
        <thead>
          <tr>
            <th style="padding: 0.5rem; border: 1px solid #ccc;">Make</th>
            <th style="padding: 0.5rem; border: 1px solid #ccc;">Model</th>
            <th style="padding: 0.5rem; border: 1px solid #ccc;">Year</th>
            <th style="padding: 0.5rem; border: 1px solid #ccc;">Price</th>
            <th style="padding: 0.5rem; border: 1px solid #ccc;">Miles</th>
            <th style="padding: 0.5rem; border: 1px solid #ccc;">Color</th>
            <th style="padding: 0.5rem; border: 1px solid #ccc;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% inventory.forEach(vehicle => { %>
            <tr>
              <td style="padding: 0.5rem; border: 1px solid #ccc;"><%= vehicle.inv_make %></td>
              <td style="padding: 0.5rem; border: 1px solid #ccc;"><%= vehicle.inv_model %></td>
              <td style="padding: 0.5rem; border: 1px solid #ccc;"><%= vehicle.inv_year %></td>
              <td style="padding: 0.5rem; border: 1px solid #ccc;">
                $<%= vehicle.inv_price ? Number(vehicle.inv_price).toFixed(2) : "0.00" %>
              </td>
              <td style="padding: 0.5rem; border: 1px solid #ccc;">
                <%= vehicle.inv_miles ? Number(vehicle.inv_miles).toLocaleString() : "0" %>
              </td>
              <td style="padding: 0.5rem; border: 1px solid #ccc;"><%= vehicle.inv_color %></td>
              <td style="padding: 0.5rem; border: 1px solid #ccc;">
                <a href="/inv/edit/<%= vehicle.inv_id %>">Edit</a> | 
                <a href="/inv/delete/<%= vehicle.inv_id %>">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p style="margin-top: 2rem; text-align: center; color: #555;">
        No vehicles found for this classification.
      </p>
    <% } %>
  </div>
</body>
</html>
