<main class="management-container">
  <h1>Account Management</h1>

  <% if (messages && messages.length > 0) { %>
    <ul class="flash-messages">
      <% messages.forEach(message => { %>
        <li><%= message %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (accountData) { %>
    <h2>Welcome to manage your account <%= accountData.account_firstname %></h2>

    <a href="/account/update/<%= accountData.account_id %>" class="update-account-link">
      Update Account Information
    </a>

    <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/management">Go to Inventory Management</a></p>
    <% } %>
  <% } else { %>
    <p>Please <a href="/account/login">log in</a> to manage your account.</p>
  <% } %>
</main>
