
<div class="service-history-container">
  <h1><%= title %></h1>

  <% if (errors && errors.length > 0) { %>
    <ul class="error-messages">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/service-history/update" method="POST">
    <input type="hidden" name="service_id" value="<%= record.service_id %>">
    <input type="hidden" name="inv_id" value="<%= record.inv_id %>">

    <label for="service_date">Service Date</label>
    <input 
      type="date" 
      name="service_date" 
      value="<%= typeof service_date !== 'undefined' ? service_date : record.service_date.toISOString().split('T')[0] %>" 
      required
    >

    <label for="description">Description</label>
    <textarea name="description" required><%= typeof description !== 'undefined' ? description : record.description %></textarea>

    <label for="cost">Cost</label>
    <input 
      type="number" 
      step="0.01" 
      name="cost" 
      value="<%= typeof cost !== 'undefined' ? cost : record.cost %>" 
      required
    >

    <button type="submit">Update</button>
  </form>
</div>


